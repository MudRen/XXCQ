// xuehe-jian.c 血河神剑
// Load 99/4

#include <weapon.h>
	――继承武器属性
#include <ansi.h>
	――允许在文件中使用颜色

inherit SWORD;
	――继承剑的属性
inherit F_UNIQUE;
	――继承独一无二的属性

void create()
	――武器的主函数
{
	set_name(HIR"血河神剑"NOR, ({ "xuehe jian", "jian" }));
		――武器的中文名和ID
	set_weight(10000);
		――武器的重量
	if (clonep())
		set_default_object(__FILE__);
	else {
		――以上三行请照抄
		set("unit", "柄");
			――武器的量词单位
		set("long", "这就是四大神兵中的"HIR"“神剑血河”"NOR"，其剑身凹凸不平，锋钝，剑
脊弯曲，剑尖歪斜，隐隐透出红光。
这本是小侯爷方应看的配剑。\n");
			――武器的描述
		set("value", 1000000);
			――武器的价值
		set("material", "steel");
			――武器的材质
		set("endure", 150);
			――武器的承受力
		set("distance", 3);
			――武器的长度
		set("replace_file", "/clone/weapon/changjian");
			――复制时的替代品
		set("wield_msg", HIY "$N反手拔剑，"HIR"血河"HIY"出鞘，一股血腥霎时弥漫天地间。\n" NOR);
			――装备描述
		set("unwield_msg", HIY"$N冷笑一声，一反手，"HIR "血河神剑"HIY"「唰」的一声已然还鞘。\n" NOR);
			――去除装备描述
	}
	init_sword(100);
		――威力
	setup();
}

void init()
{
	check_owner();
}
	――禁止武器持有人将武器丢弃或给与他人